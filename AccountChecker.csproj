<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>

    <!-- These options enable Single-File Deployment -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <PublishTrimmed>false</PublishTrimmed> <!-- no trimming bc it can cause issues with wpf -->
    <IncludeNativeLibrariesInSingleFile>true</IncludeNativeLibrariesInSingleFile> <!-- Include native libraries -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SteamKit2" Version="3.3.1" />
  </ItemGroup>

  <!-- no debug .pdb files -->
  <ItemGroup>
    <None Update="**\*.pdb">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
